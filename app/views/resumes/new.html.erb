<div class="container-fluid">
  <div class="col-md-12">
    <section id="job-info">

      <!-- starred / star -->
      <div>
        <% if current_user && current_user.is_follower_of?(@job) %>
          <%= link_to unstar_job_path(@job), method: :post do %>
            <sapn class="fa fa-star fa-2x"></sapn>
          <% end %>
        <% else %>
          <%= link_to star_job_path(@job), method: :post do %>
            <sapn class="fa fa-star-o fa-2x"></sapn>
          <% end %>
        <% end %>
      </div>
      <!-- logo -->
      <!-- job logo -->
      <% if @job.company.image.present? %>
        <%= image_tag(@job.company.image.thumb.url, class: "job-logo") %>
      <% else %>
        <i class="logo-mini fa fa-file-text fa-fw fa-5x"  aria-hidden="true"></i>
      <% end %>
      
      <!-- title -->
      <div class="job-title">
        <%= @job.title %>
      </div>

      <!-- location and salary -->
      <p class="details">
        <i class="icon fa fa-usd fa-fx" aria-hidden="true"></i>
        <%= @job.wage_lower_bound / 1000 %> K -
        <%= @job.wage_upper_bound / 1000 %> K

        <p class="address">
          <i class="fa fa-location-arrow fa-fx" aria-hidden="true"></i>
          <%= @job.address %>
        </p>
      </p>

      <!-- description -->
      <p class="description">
        <%= @job.description %>
      </p>

      <br>
      <div>
        <%= simple_form_for [@job, @resume] do |f| %>
          <%= f.input :content, :label => t('f_content') %>
          <%= f.input :attachment, :label => t('f_attachment') %>
          <%= f.submit t('f_send'), class: 'btn btn-lg btn-danger button_highlight' %>
        <% end %>
      </div>
  </div>
</div>
