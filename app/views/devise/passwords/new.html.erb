<div class="row user_setup">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
    <h2><sapn class="fa fa-share"></sapn><%= t('dv_forgot_pwd') %></h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :label => false, placeholder: t('dv_check_email'), error: t('dv_warn_email'), required: true, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, t('dv_find_pwd'),class: "button" %>
      </div>
    <% end %>
    <hr />
    <div class="account">
      <%= link_to t('dv_account_signin'), new_session_path(resource_name) %><br />
      <%= link_to t('dv_no_account_signup'), new_registration_path(resource_name) %>
    </div>
  </div>
</div>
</div>
