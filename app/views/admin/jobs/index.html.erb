<div class='pull-right admin-btn-add'>
  <%= link_to(t('btn_add'), new_admin_job_path, :class => 'btn btn-sm btn-default' ) %>
</div>

<br>

<table class="table table-boldered table-striped custab" >
  <thead>
      <tr>
        <th width="30"><%= t('th_company') %></th>
        <th width="100"><%= t('th_category') %></th>
        <th width="150"><%= t('th_position') %></th>
        <th width="60"><%= t('th_count') %></th>
        <th width="100"><%= t('th_manage') %></th>
        <th width="50"><%= t('th_published') %></th>
      </tr>
  </thead>

  <% @jobs.each do |job| %>
    <tr>
      <td style="vertical-align:middle">
        <%= job.company.title %>
      </td>
      <td style="vertical-align:middle">
        <%= job.category %>
      </td>
      <td style="vertical-align:middle">
        <%= link_to(job.title, admin_job_path(job)) %>
      </td>
      <td style="vertical-align:middle"> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %> </td>
      <td style="vertical-align:middle">
      <!-- edit, delete, hide/publish -->
          <!-- edit -->
          <%= link_to(t('btn_edit'), edit_admin_job_path(job), :class => 'btn btn-xs btn-success') %>
          <!-- delete -->
          <%= link_to(t('btn_delete'), admin_job_path(job), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-xs btn-danger')  %>

      <% if job.is_hidden %>
          <!-- publish -->
        <%= link_to(t('btn_publish'), publish_admin_job_path(job) , :method => :post, :class => 'btn btn-xs btn-default') %>
      <% else %>
          <!-- hide -->
        <%= link_to(t('btn_hide'), hide_admin_job_path(job), :method => :post,  :class => 'btn btn-xs btn-default') %>
          <% end %>
      </td>

      <td>
          <%= job.created_at %>
      </td>
    </tr>
  <% end %>
</table>

<!-- pagination -->
<div class="col-md-10 col-md-offset-1 job-bottom">
	<div class="text-center">
		<%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
	</div>
</div>
